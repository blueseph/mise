{
  "name": "@mise/core",
  "version": "3.5.0",
  "description": "a small, no-frills library to build complex client-side applications and easily manage state",
  "main": "dist/mise.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueseph/mise.git"
  },
  "directories": {
    "example": "example"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --coverage --verbose --watch",
    "build": "webpack --mode=production",
    "build:unoptimized": "webpack",
    "lint": "eslint ./src/",
    "lint:fix": "eslint --fix ./src/",
    "start": "npm run lint && npm run test && npm run build",
    "prepublishOnly": "npm start"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/utils.js"
    ],
    "testURL": "http://localhost"
  },
  "bundlesize": [
    {
      "path": "./dist/mise.js"
    }
  ],
  "author": "dan b.",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "7.1.0",
    "@mise/test": "^1.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.6",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.4.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,htm,html,css,scss,less,graphql,json,md,yaml,yml}": [
      "prettier --write --trailing-comma all",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
